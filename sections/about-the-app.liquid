{{ 'get-started.css' | asset_url | stylesheet_tag }}

<div class="outerContainerGS">
  <div class="containerGS">
    <img
      id="appScreenshotTrio"
      src="https://cdn.shopify.com/s/files/1/0745/8694/7905/files/app_screenshot_trio.png?v=1736441877"
      alt=""
      width="1000"
      height="1000"
      loading="lazy"
    >
    <h1 class="h0">Share, Track, and Earn</h1>
    <p class="subtitle">
      The Fundraise-A-Thon mobile app lets you earn points for the donations you help bring to your student’s campaign.
    </p>
    <div class="downloadIcons">
      <a href="https://apps.apple.com/us/app/fundraise-a-thon/id6449069221" target="_blank">
        {% render 'apple-download-icon' %}
      </a>

      <a href="https://play.google.com/store/apps/details?id=com.scentcofundraise" target="_blank">
        <img
          class="appIcons"
          src="https://cdn.shopify.com/s/files/1/0745/8694/7905/files/GetItOnGooglePlay_Badge_Web_color_English.png?v=1736192994"
          alt=""
          width="1000"
          height="1000"
          loading="lazy"
        >
      </a>
    </div>
  </div>
  <div class="pointed-border">test</div>
  <div class="secondSection">
    <div class="whiteBox containerGS">
      <img
        class="shareTrackEarn"
        src="https://cdn.shopify.com/s/files/1/0745/8694/7905/files/Share.png?v=1736447604"
        alt=""
        width="1000"
        height="1000"
        loading="lazy"
      >
      <h1 class="h0">Share</h1>
      <p class="subtitle">
        Conveniently share your campaign with family, friends, and coworkers to encourage donations.
      </p>
    </div>
    <div class="whiteBox containerGS">
      <img
        class="shareTrackEarn"
        src="https://cdn.shopify.com/s/files/1/0745/8694/7905/files/Track.png?v=1736447604"
        alt=""
        width="1000"
        height="1000"
        loading="lazy"
      >
      <h1 class="h0">Track</h1>
      <p class="subtitle">
        Keep track of the campaign’s progress, announcements from the campaign coordinator, donations, and more.
      </p>
    </div>
    <div class="whiteBox containerGS">
      <img
        class="shareTrackEarn"
        src="https://cdn.shopify.com/s/files/1/0745/8694/7905/files/Share.png?v=1736447604"
        alt=""
        width="1000"
        height="1000"
        loading="lazy"
      >
      <h1 class="h0">Earn</h1>
      <p class="subtitle">
        When someone makes a donation using your Student Referral Code, you earn points that can be redeemed for an
        Amazon.com eGift Card once your campaign ends.
      </p>
    </div>
  </div>
</div>
